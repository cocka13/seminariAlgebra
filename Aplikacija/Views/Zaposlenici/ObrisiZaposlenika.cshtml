@model Aplikacija.Models.Zaposlenik

@{
    ViewBag.Title = "Obriši zaposlenika";
}

<div>
    <h2>@ViewBag.Title</h2>
    <h4>Jeste li sigurni obrisati zaposlenika @Model.KorisnickoIme?</h4>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Ime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Prezime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prezime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.KorisnickoIme)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KorisnickoIme)
        </dd>

    </dl>


    @if (ViewBag.Message != null)
    {
        <div>
            <label style="color:red">@ViewBag.Message</label>
        </div>
    }


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obriši zaposlenika" class="btn btn-default" /> |
            @Html.ActionLink("Popis zaposlenika", "Zaposlenici")
        </div>
    }

</div>
