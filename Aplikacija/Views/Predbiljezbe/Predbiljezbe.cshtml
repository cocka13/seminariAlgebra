@model IEnumerable<Aplikacija.Models.ViewModeli.PredbiljezbaViewModel>

@{
    ViewBag.Title = "Predbilježbe";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-inline">

        @Html.Label("", "Naziv seminara: ")
        @Html.TextBox("pretraga")

        <input type="submit" value="Pretraži" class="btn btn-default" />

        @Html.Label("", "")
        @Html.DropDownList("status", new SelectListItem[]{
                    new SelectListItem() {Text = "Neobrađena", Value="Neobradjena"},
                    new SelectListItem() {Text = "Odbijena", Value="Odbijena"},
                    new SelectListItem() {Text = "Prihvaćena", Value="Prihvacena"}},"-- Status predbilježbe --", new { @class = "form-control", @onchange = "this.form.submit();" })
    </div>
}

<br />

<table class="table">
    <tr>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.NazivSeminara)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Datum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusPredbiljezbe)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Uredi", "UrediPredbiljezbu", "Predbiljezbe", new { id = item.IdPredbiljezba }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NazivSeminara)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusPredbiljezbe)
            </td>
            <td>
                @Html.ActionLink("Obriši", "ObrisiPredbiljezbu", "Predbiljezbe", new { id = item.IdPredbiljezba }, null)
            </td>

        </tr>
    }

</table>
